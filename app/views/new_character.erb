<!doctype html>
<html>
  <head>
    <title>WaifuChat - New Character</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/index_style.css">
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="header">
      Waifu Chat
    </div>
    <br><br>

    <div class="container edit-box">
    <br>

      <form class="form-horizontal" action="new_character" method="POST">
        <div class="form-group">
          <label class="col-sm-2 control-label">Character</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="name" placeholder="Name">
          </div>
        </div>

        <hr>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Origin/Birthplace</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="bio" placeholder="Origin/Birthplace">
          </div>
        </div>
        
        <hr>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Birthday</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="birthday" placeholder="Birthday">
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Bio</label>
          <div class="col-sm-9">
            <textarea class="form-control" name="bio" placeholder="Character Bio"></textarea>
          </div>
        </div>
        
        <hr>
        <div class="form-group">
          <label class="col-sm-2 control-label">Likes</label>
          <div class="col-sm-9">
            <div class="likes lwrapper">
              <div class="form-group">
                <input type="text" class="form-control" name="likes[]" placeholder="Like">
              </div>
            </div>
           <div class="btn btn-primary" id="like_btn">Add Like</div>
          </div>
        </div>
        
        <hr>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Dislikes</label>
          <div class="col-sm-9">
            <div class="dislikes lwrapper">
              <div class="form-group">
                <input type="text" class="form-control" name="dislikes[]" placeholder="Dislike">
              </div>
            </div>
              <div class="btn btn-primary" id="dislike_btn">Add Dislike</div>
          </div>
        </div>
        
        <hr>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Appearances</label>
          <div class="col-sm-9">
            <div class="appearances lwrapper">
              <div class="form-group">
                <input type="text" class="form-control" name="appearances" placeholder="Appearance">
              </div>
            </div>
              <div class="btn btn-primary" id="appearance_btn">Add Appearance</div>
            </div>
        </div>
        
        <hr>
        
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default create-btn">Create Character</button>
          </div>
        </div>
      </form>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="js/script.js"></script>
  </body>
</html>
