    <div class="container edit-box">
    <br>

      <form class="form-horizontal" action="new_character" method="POST">
        <div class="form-group">
          <label class="col-sm-2 control-label">Character</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="name" placeholder="Name">
          </div>
        </div>

        <hr>
          <div class="form-group">
          <label class="col-sm-2 control-label">Image Portrait</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="image" placeholder="Paste .jpg URL for portrait picture">
          </div>
        </div>
        <hr>

        <div class="form-group">
          <label class="col-sm-2 control-label">Gender</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="gender" placeholder="Gender">
          </div>
        </div>

        <hr>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Origin/Birthplace</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="origin" placeholder="Origin/Birthplace">
          </div>
        </div>
        
        <hr>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Birthday</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="birthday" placeholder="Birthday">
          </div>
        </div>

        <hr>

        <div class="form-group">
          <label class="col-sm-2 control-label">Quote</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="quote" placeholder="Quote">
          </div>
        </div>
        
        <hr>

        <div class="form-group">
          <label class="col-sm-2 control-label">Nickname</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="nickname" placeholder="Nickname">
          </div>
        </div>

        <hr>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Bio</label>
          <div class="col-sm-9">
            <textarea class="form-control" name="bio" placeholder="Character Bio" rows="6" resize="none"></textarea>
          </div>
        </div>
        
        <hr>
        <div class="form-group">
          <label class="col-sm-2 control-label">Likes</label>
          <div class="col-sm-9">
            <div class="likes lwrapper">
              <div class="form-group">
                <input type="text" class="form-control" name="likes[]" placeholder="Like">
              </div>
            </div>
           <div class="btn btn-primary" id="like_btn">Add Like</div>
          </div>
        </div>
        
        <hr>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Dislikes</label>
          <div class="col-sm-9">
            <div class="dislikes lwrapper">
              <div class="form-group">
                <input type="text" class="form-control" name="dislikes[]" placeholder="Dislike">
              </div>
            </div>
              <div class="btn btn-primary" id="dislike_btn">Add Dislike</div>
          </div>
        </div>
        
        <hr>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Appearances</label>
          <div class="col-sm-9">
            <div class="appearances lwrapper">
              <div class="form-group">
                <input type="text" class="form-control" name="appearances" placeholder="Appearance">
              </div>
            </div>
              <div class="btn btn-primary" id="appearance_btn">Add Appearance</div>
            </div>
        </div>
        
        <hr>
        
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-6"><button type="submit" class="btn btn-default create-btn">Create Character</button></div><div class="col-sm-6"><a href="/characters"><button class="btn btn-default cancel-btn">Cancel</button></a></div></center>
          </div>
        </div>
      </form>
    </div>
