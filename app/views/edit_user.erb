    <% if session[:user_id] && @current === @user.id%>
    
    <% if @user.image == nil then @user.image = "http://cumbrianrun.co.uk/wp-content/uploads/2014/02/default-placeholder.png"%><% end %> 
    <form class="form-horizontal" action="/edituser" method="POST">
    <div class="profile-wrap">
    <div class="row head-wrap">
      <div class="col-lg-3">
        <ul class="list-group">
              <li class="list-group-item">
                <input value ="<%=@user.image%>" type="text" class="form-control" name="image" placeholder="Profile Image URL goes here">
              </li>
        </ul>
      </div>
      <div class="col-lg-7 col-lg-offset-1 title shadow">
        <h1 class="name"><%=@user.username%></h1>
        <p class="panel">Member Since:<%=@user.created_at%></p><br>
        <p class="panel">Last signed on: xxxxxx</p>
      </div>
    </div>
    <br>
    <!-- Profile Information -->
      <div class="row head-wrap">
        <div class="col-lg-6 title shadow">
        <br>
          <ul class="list-group">
              <li class="list-group-item">
                <input type="text" value="<%=@user.name%>" class="form-control" name="name" placeholder="Your name here">
              </li>
              <li class="list-group-item">
                <input type="text" value="<%=@user.birthday%>"class="form-control" name="birthday" placeholder="Your Birthday?">
              </li>
              <li class="list-group-item">
                <input type="text" value="<%=@user.country%>"class="form-control" name="country" placeholder="Country?">
              </li>
              <li class="list-group-item">
                <input type="text" value="<%=@user.language%>"class="form-control" name="language" placeholder="Language(s)?">
              </li>
            </ul>
        </div>

        <div class="col-lg-4 col-lg-offset-1 title shadow">
        <h1 class="name">Favourites</h1>
        </div>

        </div>

         <div class="row head-wrap about-marg">
          <div class="col-lg-12 title shadow">
            <h1 class="about-h1">About</h1>
            <div class="about-body">
              <textarea class="form-control" name="about" placeholder="Anything about you...Hobbies...Interest?" rows="6" resize="none"><%=@user.about%></textarea>
            </div>
          </div>
          <div class="col-lg-12">
            <input type="hidden" name="id" value="<%=@user.id%>"/>
            <button type="submit" class="btn btn-default edit-btn">Save Changes</button>
          </div>
        </div>
    </div>
    </form>

    <% else %>
      <div class="profile-wrap">
        <h1>Sorry!</h1>
        <p>But, this is not yours to edit.</p>
      </div>
    <% end %>