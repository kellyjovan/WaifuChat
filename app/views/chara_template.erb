<!doctype html>
<html>
  <head>
    <title>Waifu Chat - <%=@character.name%></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/index_style.css">
  </head>
  <body>
    <div class="header">
    Waifu Chat
    </div>
    
    <div class="profile-wrap">
      <div class="row">
        <% if @character.image == nil then @character.image = "http://cumbrianrun.co.uk/wp-content/uploads/2014/02/default-placeholder.png"%><% end %>
        <!-- Profile Information -->
        <div class="col-sm-5">
          <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading name"><%= @character.name %></div>
            <div class="panel-body">
              <img class="portrait" src="<%= @character.image %>"/>
            </div>

            <!-- List group -->
            <ul class="list-group">
              <li class="list-group-item">
              Birthday: <%= @character.birthday %></li>
              <li class="list-group-item">
              Gender: <%= @character.gender %></li>
              <li class="list-group-item">
              Origin: <%= @character.origin %></li>
              <% if @character.quote != nil%>
              <li class="list-group-item">
              Quote: <%= @character.quote %></li>
              <% end %>
              <% if @character.nickname == "" then @v = "display: none" else @v = "display: show" end %>
              <li class="list-group-item" style=<%= @v %>>
              Nickname: <%= @character.nickname %></li>
            </ul>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">About <%= @character.name %></h3>
            </div>
            <div class="panel-body">
              <%= @character.bio %>
            </div>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Likes</h3>
            </div>
            <ul class="list-group">
              <li class="list-group-item">Thing 1</li>
              <li class="list-group-item">Thing 2</li>
              <li class="list-group-item">Thing 3</li>
            </ul>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Dislikes</h3>
            </div>
            <ul class="list-group">
              <li class="list-group-item">Thing 1</li>
              <li class="list-group-item">Thing 2</li>
              <li class="list-group-item">Thing 3</li>
            </ul>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Appearances</h3>
            </div>
            <ul class="list-group">
              <li class="list-group-item">Appearance 1</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
