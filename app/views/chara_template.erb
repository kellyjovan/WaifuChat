<!doctype html>
<html>
  <head>
    <title>Waifu Chat - <%=@character.name%></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/index_style.css">
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Waifu Chat</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/dash">Dash</a></li>
            <li><a href="/characters">Characters</a></li>
              </ul>
            </li>
          </ul>
          <form class="navbar-form navbar-left" id="search">
            <div class="col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" id="inputGroup">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </span>
                    </div>
                </div>
            </div>
          </form>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    
    <div class="profile-wrap">
      <div class="row">
        <% if @character.image == nil then @character.image = "http://cumbrianrun.co.uk/wp-content/uploads/2014/02/default-placeholder.png"%><% end %>
        <!-- Profile Information -->
        <div class="col-sm-5">
          <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading name"><%= @character.name %></div>
            <div class="panel-body">
              <img class="portrait" src="<%= @character.image %>"/>
            </div>

            <!-- List group -->
            <ul class="list-group">
              <li class="list-group-item">
              Birthday: <%= @character.birthday %></li>
              <li class="list-group-item">
              Gender: <%= @character.gender %></li>
              <li class="list-group-item">
              Origin: <%= @character.origin %></li>
              <% if @character.quote != nil%>
              <li class="list-group-item">
              Quote: <%= @character.quote %></li>
              <% end %>
              <% if @character.nickname == "" then @v = "display: none" else @v = "display: show" end %>
              <li class="list-group-item" style=<%= @v %>>
              Nickname: <%= @character.nickname %></li>
            </ul>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">About <%= @character.name %></h3>
            </div>
            <div class="panel-body">
              <%= @character.bio %>
            </div>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Likes</h3>
            </div>
            <ul class="list-group">
              <li class="list-group-item">Thing 1</li>
              <li class="list-group-item">Thing 2</li>
              <li class="list-group-item">Thing 3</li>
            </ul>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Dislikes</h3>
            </div>
            <ul class="list-group">
              <li class="list-group-item">Thing 1</li>
              <li class="list-group-item">Thing 2</li>
              <li class="list-group-item">Thing 3</li>
            </ul>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Appearances</h3>
            </div>
            <ul class="list-group">
              <li class="list-group-item">Appearance 1</li>
            </ul>
          </div>
        </div>
        <div class="col-sm-4">
          <button type="submit" class="btn btn-default create-btn">Edit</button>
        </div>
        <div class="col-sm-4">
          <form action="/delete" method="POST">
          <input type="hidden" name="id" value="<%= @character.id %>"/>
          <button type="submit" class="btn btn-default cancel-btn">Delete</button>
          </form>
        </div>

        </div>
      </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
